<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/marca_01" />

        <EditText
            android:id="@+id/textEmailLogin"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="Email"
            android:layout_margin="12dp"
            android:inputType="textEmailAddress"
            android:padding="16dp" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="Senha"
            android:layout_margin="12dp"
            android:inputType="textPassword"
            android:padding="16dp" />

        <TextView
            android:id="@+id/textEsqueciAsenha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            android:padding="10dp"
            android:text="Esqueci minha senha."
            android:textColor="#198795" />

        <Button
            android:id="@+id/botaoLogin"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/corfundo"
            android:elevation="25dp"
            android:ellipsize="middle"
            android:layout_margin="12dp"
            android:padding="16dp"
            android:text="Login"
            app:iconSize="18dp" />

        <Button
            android:id="@+id/BotaoRegistrar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/corfundo"
            android:elevation="25dp"
            android:layout_margin="12dp"
            android:padding="16dp"
            android:text="Criar Conta" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>